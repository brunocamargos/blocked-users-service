{
  "swagger": "2.0",
  "info": {
    "description": "A simple API to manage blocked users",
    "version": "1.0.0",
    "title": "Swagger BlockedUsersService",
    "contact": {
      "email": "bruno.camargos@gmail.com"
    }
  },
  "host": "localhost:3051",
  "tags": [
    {
      "name": "blockedUsers",
      "description": "Put/remove users to/from a black list"
    },
    {
      "name": "healthCheck",
      "description": "Monitor de health of the service"
    }
  ],
  "paths": {
    "/blockedUsers": {
      "post": {
        "tags": [
          "blockedUsers"
        ],
        "summary": "Block user",
        "description": "Add a given user to a blacklist",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "User to block",
            "required": true,
            "schema": {
              "type": "object",
              "required": [
                "cpf"
              ],
              "properties": {
                "cpf": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          },
          "500": {
            "description": "Internal Server Error",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          }
        }
      },
      "get": {
        "tags": [
          "blockedUsers"
        ],
        "summary": "List blocked users",
        "description": "List all blocked users or for a given CPF",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "query",
            "name": "cpf",
            "description": "CPF to search for",
            "required": false,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Ok",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/BlockedUser"
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          },
          "404": {
            "description": "Not Found",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          },
          "500": {
            "description": "Internal Server Error",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          }
        }
      }
    },
    "/blockedUsers/{id}": {
      "get": {
        "tags": [
          "blockedUsers"
        ],
        "summary": "Return a Blocked User",
        "description": "Get a Blocked User by Id",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "description": "BlockedUserId to search for",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Ok",
            "schema": {
              "$ref": "#/definitions/BlockedUser"
            }
          },
          "400": {
            "description": "Bad Request",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          },
          "404": {
            "description": "Not Found",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          },
          "500": {
            "description": "Internal Server Error",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          }
        }
      },
      "delete": {
        "tags": [
          "blockedUsers"
        ],
        "summary": "Remove a Blocked User",
        "description": "Remove a Blocked User by Id",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "description": "BlockedUserId to remove",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "204": {
            "description": "No Content"
          },
          "400": {
            "description": "Bad Request",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          },
          "404": {
            "description": "Not Found",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          },
          "500": {
            "description": "Internal Server Error",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          }
        }
      }
    },
    "/healthCheck": {
      "get": {
        "tags": [
          "healthCheck"
        ],
        "summary": "Status from server",
        "description": "List infos about the server running",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Ok",
            "schema": {
              "type": "object",
              "properties": {
                "pid": {
                  "type": "number"
                },
                "uptime": {
                  "type": "number"
                },
                "memory": {
                  "type": "object",
                  "properties": {
                    "rss": {
                      "type": "number"
                    },
                    "heapTotal": {
                      "type": "number"
                    },
                    "heapUsed": {
                      "type": "number"
                    },
                    "external": {
                      "type": "number"
                    }
                  }
                },
                "search_count": {
                  "type": "number"
                },
                "blocked_users_count": {
                  "type": "number"
                },
                "db_status": {
                  "type": "string"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "BlockedUser": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "byte"
        },
        "cpf": {
          "type": "string"
        }
      },
      "xml": {
        "name": "BlockedUser"
      }
    },
    "Error": {
      "type": "object",
      "properties": {
        "status_message": {
          "type": "string"
        },
        "status_code": {
          "type": "integer",
          "format": "int32"
        },
        "message": {
          "type": "string"
        },
        "details": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "description": {
                "type": "string"
              }
            }
          }
        }
      },
      "xml": {
        "name": "Error"
      }
    }
  }
}
